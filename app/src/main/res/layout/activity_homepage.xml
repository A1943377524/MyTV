    <RadioGroup
        android:id="@+id/Radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="5">

        <RadioButton
            android:id="@+id/RadioButton_shouye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_home_pressed"
            android:gravity="center"
            android:text="首页" />

        <RadioButton
            android:id="@+id/RadioButton_guancha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_panda_eye_pressed"
            android:gravity="center"
            android:text="熊猫观察" />

        <RadioButton
            android:id="@+id/RadioButton_zhibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_panda_live_pressed"
            android:gravity="center"
            android:text="熊猫直播" />

        <RadioButton
            android:id="@+id/RadioButton_cctv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_panda_culture_presseds"
            android:gravity="center"
            android:text="CCTV" />

        <RadioButton
            android:id="@+id/RadioButton_zhongguo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_live_china_pressed"
            android:gravity="center"
            android:text="直播中国" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Radio"></FrameLayout>
</RelativeLayout>
